<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="instatag.com.b3ds.ConsultDoctorActivity"
    android:background="@drawable/navimage">








    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Book an appointment"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginLeft="25dp"
        android:textSize="25sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="find doctors,clinics,lab and more"
        android:textStyle="italic"
        android:textColor="#fff"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:background="#fff"
        android:layout_marginRight="50dp"
        android:orientation="vertical">



        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Doctor/Lab/Address"
            android:id="@+id/searchdoctorID"
            android:textColor="#000"

            android:gravity="center"

            android:padding="10dp"
            android:textSize="18sp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">



        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="your city name"
            android:id="@+id/searchaddressId"
android:gravity="center"
            android:textColor="#000"


            android:padding="10dp"
            android:textSize="18sp"
            />
    </LinearLayout>










    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Choose Plan"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#fff"

        android:textSize="25sp"
        />


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"

        android:orientation="vertical">



        <RadioGroup
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/genderID"
            android:layout_width="match_parent"


            android:layout_height="wrap_content">



            <RadioButton
                android:id="@+id/freeplanID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FREE"
android:textColor="#fff"
                android:textSize="20sp"
                android:checked="true" />

            <RadioButton
                android:textSize="20sp"
                android:id="@+id/purchaseplanID"
android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAID" />

        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">



        <Spinner
            android:id="@+id/specialistID"

            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="10dp"
            android:entries="@array/doctorspecialist"


            android:layout_marginTop="5dp" />



    </LinearLayout>


    <TextView

        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search"
        android:textStyle="bold"
        android:id="@+id/submitDetailsId"
       android:background="@drawable/buttonstyle"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textSize="18sp"
        />



    </LinearLayout>



